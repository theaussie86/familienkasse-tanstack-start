# PostgreSQL Container Configuration
# Used by Docker Compose to initialize the database
POSTGRES_USER=familienkasse
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=familienkasse

# Database Connection
# For Docker: use 'postgres' as host (container name)
# For local development with containerized DB: use 'localhost'
DATABASE_URL=postgresql://familienkasse:your-secure-password-here@postgres:5432/familienkasse

# Google OAuth (for social login)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Registration Control
# Set to 'false' to disable new user registration
# When disabled, the sign-up endpoint returns 404 and UI hides registration option
ALLOW_REGISTRATION=true
